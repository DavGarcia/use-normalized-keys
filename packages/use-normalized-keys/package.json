{
  "name": "use-normalized-keys",
  "version": "1.1.2",
  "description": "A React hook with unified API and 60fps animations for normalized keyboard input handling, designed for productivity applications, drawing tools, and professional interfaces",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "USAGE.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "build:demo": "vite build --config vite.demo.config.mjs",
    "build:tools": "vite build --config vite.tools.config.mjs",
    "dev": "vite build --watch",
    "dev:demo": "vite --config vite.demo.config.mjs",
    "dev:tools": "vite --config vite.tools.config.mjs",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run test && npm run build",
    "prepack": "npm run build"
  },
  "keywords": [
    "react",
    "hooks",
    "keyboard",
    "input",
    "productivity",
    "drawing",
    "shortcuts",
    "accessibility",
    "normalization",
    "cross-browser",
    "unified-api",
    "60fps",
    "animations",
    "requestanimationframe",
    "context-provider",
    "smooth-animations",
    "text-editor",
    "professional"
  ],
  "author": "David Garcia <dgarcia182@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/DavGarcia/use-normalized-keys#readme",
  "bugs": {
    "url": "https://github.com/DavGarcia/use-normalized-keys/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DavGarcia/use-normalized-keys.git",
    "directory": "packages/use-normalized-keys"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "happy-dom": "^18.0.1",
    "terser": "^5.43.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
