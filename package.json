{
  "name": "use-normalized-keys-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Monorepo for use-normalized-keys React hook - professional keyboard input normalization for productivity applications",
  "author": "David Garcia <dgarcia182@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/DavGarcia/use-normalized-keys#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/DavGarcia/use-normalized-keys.git"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/use-normalized-keys",
    "test": "npm run test --workspace=packages/use-normalized-keys",
    "test:watch": "npm run test:watch --workspace=packages/use-normalized-keys",
    "test:coverage": "npm run test:coverage --workspace=packages/use-normalized-keys",
    "demo": "npm run dev:demo --workspace=packages/use-normalized-keys",
    "tools": "npm run dev:tools --workspace=packages/use-normalized-keys",
    "dev": "npm run dev --workspace=packages/use-normalized-keys",
    "docs:dev": "npm run dev --workspace=docs",
    "docs:build": "npm run build --workspace=docs",
    "docs:preview": "npm run preview --workspace=docs",
    "clean": "rm -rf packages/*/dist packages/*/node_modules docs/node_modules node_modules",
    "reinstall": "npm run clean && npm install"
  },
  "devDependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}